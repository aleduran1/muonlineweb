<h4>
  <i class="fa fa-envelope-o" aria-hidden="true"></i> CAMBIO DE CORREO ELECTRÓNICO</h4>
<form action="/account/changemail" method="post">
  <input type="hidden" name="_csrf" value="{{csrfToken}}">
  <div class="col-md-6 col-md-offset-3">
    <div class="form-group">
      <label for="mailActual" class="control-label">E-MAIL Actual:</label>
      <div class="input-group">
        <span class="input-group-addon">
          <i class="fa fa-envelope-o fa-fw" aria-hidden="true"></i>
        </span>
        <input type="email" class="form-control" name="mailActual" id="mailActual" placeholder="" required>
      </div>
    </div>
    <div class="form-group">
      <label for="mail" class="control-label">Nuevo E-MAIL:</label>
      <div class="input-group">
        <span class="input-group-addon">
          <i class="fa fa-envelope-o fa-fw" aria-hidden="true"></i>
        </span>
        <input type="email" class="form-control" name="mail" id="mail" required>
      </div>
    </div>
    <div class="form-group">
      <label for="mailConfirm" class="control-label">Confirmar E-MAIL:</label>
      <div class="input-group">
        <span class="input-group-addon">
          <i class="fa fa-envelope-o fa-fw" aria-hidden="true"></i>
        </span>
        <input type="email" class="form-control" name="mailConfirm" id="mailConfirm" required>
      </div>
    </div>
    {{{captcha}}}
    <br>
    <center>
      <button type="submit" class="btn btn-primary raised">Cambiar Contraseña</button>
    </center>
  </div>
</form>