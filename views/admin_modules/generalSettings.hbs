    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        General Settings
      </h1>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <!-- left column -->
        <div class="col-md-12">
          {{#if success}}
          <div class="alert alert-success alert-dismissible">
            <h4><i class="icon fa fa-check"></i> Success!</h4>
            {{success}}
          </div>
          {{/if}}
          {{#if error}}
          <div class="alert alert-danger alert-dismissible">
            <h4><i class="icon fa fa-ban"></i> Problem!</h4>
            {{error}}
          </div>
          {{/if}}
          {{#if validationError}}
          <div class="alert alert-danger alert-dismissible">
            <h4><i class="icon fa fa-ban"></i> Problem!</h4>
            <ul>
              {{#each validationError}}
              <li>{{msg}}</li>
              {{/each}}
            </ul>
          </div>
          {{/if}}
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">General Settings</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" method="post" action="/admincp/general">
              <div class="box-body">
                <div class="col-md-4 col-md-offset-4">
                  <h2>WEBSITE</h2>
                  <div class="form-group">
                    <label for="name">Website Name:</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{appconfig.name}}" required>
                  </div>
                  <div class="form-group">
                    <label for="facebookPage">Facebook Page:</label>
                    <input type="text" class="form-control" id="facebookPage" name="facebookPage" value="{{appconfig.apis.facebook.pageName}}" required>
                  </div>
                  <div class="form-group">
                    <label for="facebookApiKey">Facebook Page:</label>
                    <input type="text" class="form-control" id="facebookApiKey" name="facebookApiKey" value="{{appconfig.apis.facebook.apikey}}" required>
                  </div>
                  <div class="form-group">
                    <label for="domain">Website Domain:</label>
                    <input type="text" class="form-control" id="domain" name="domain" value="{{appconfig.domain}}" required>
                  </div>
                  <div class="form-group">
                    <label for="ip">Server IP Address:</label>
                    <input type="text" class="form-control" id="ip" name="ip" value="{{appconfig.ip}}" required>
                  </div>
                  <div class="form-group">
                    <label for="port">Server Port:</label>
                    <input type="text" class="form-control" id="port" name="port" value="{{appconfig.port}}" required>
                  </div>
                  <div class="form-group">
                    <label for="secret">Secret Key (for cookies):</label>
                    <input type="text" class="form-control" id="secret" name="secret" value="{{appconfig.secret}}" required>
                  </div>
                  <h2>DATABASE</h2>
                  <div class="form-group">
                    <label for="dbhosname">DB Hostname:</label>
                    <input type="text" class="form-control" id="dbhostname" name="dbhostname" value="{{appconfig.db.host}}" required>
                  </div>
                  <div class="form-group">
                    <label for="dbusername">DB Username:</label>
                    <input type="text" class="form-control" id="dbusername" name="dbusername" value="{{appconfig.db.username}}" required>
                  </div>
                  <div class="form-group">
                    <label for="dbpassword">DB Password:</label>
                    <input type="text" class="form-control" id="dbpassword" name="dbpassword" value="{{appconfig.db.password}}" required>
                  </div>
                  <div class="form-group">
                    <label for="dbname">DB Name:</label>
                    <input type="text" class="form-control" id="dbname" name="dbname" value="{{appconfig.db.database}}" required>
                  </div>
                  <h2>RECAPTCHA</h2>
                  <div class="form-group">
                    <label for="recatpcha_active">Recaptcha Enabled:</label>
                    <input type="checkbox" id="recatpcha_active" name="recatpcha_active" value="1" {{#if appconfig.apis.recaptcha.active}}checked{{/if}}>
                  </div>
                  <div class="form-group">
                    <label for="publickey">Public Key:</label>
                    <input type="text" class="form-control" id="publickey" name="publickey" value="{{appconfig.apis.recaptcha.public}}" required>
                  </div>
                  <div class="form-group">
                    <label for="privatekey">Private Key:</label>
                    <input type="text" class="form-control" id="privatekey" name="privatekey" value="{{appconfig.apis.recaptcha.private}}" required>
                  </div>
                  <h2>SMTP</h2>
                  <div class="form-group">
                    <label for="smtphost">SMTP Host:</label>
                    <input type="text" class="form-control" id="smtphost" name="smtphost" value="{{appconfig.smtp.host}}" required>
                  </div>
                  <div class="form-group">
                    <label for="smtpport">SMTP Port:</label>
                    <input type="text" class="form-control" id="smtpport" name="smtpport" value="{{appconfig.smtp.port}}" required>
                  </div>
                  <div class="form-group">
                    <label for="smtp_secure">SMTP Secure(SSL):</label>
                    <input type="checkbox" id="smtp_secure" name="smtp_secure" value="true" {{#if appconfig.smtp.secure}}checked{{/if}}>
                  </div>
                  <div class="form-group">
                    <label for="smtpuser">SMTP Username:</label>
                    <input type="text" class="form-control" id="smtpuser" name="smtpuser" value="{{appconfig.smtp.auth.user}}" required>
                  </div>
                  <div class="form-group">
                    <label for="smtppass">SMTP Password:</label>
                    <input type="text" class="form-control" id="smtppass" name="smtppass" value="{{appconfig.smtp.auth.pass}}" required>
                  </div>
                </div>
              </div>
              <!-- /.box-body -->
              <input type="hidden" name="_csrf" value="{{csrfToken}}">
              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>

            </form>
          </div>
        </div>
      </div>
      <!-- /.box-body -->
    </section>
    <!-- /.content -->