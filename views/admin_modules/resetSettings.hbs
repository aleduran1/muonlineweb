    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Reset Settings
      </h1>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <!-- left column -->
        <div class="col-md-12">
          {{#if success}}
            <div class="alert alert-success alert-dismissible">
              <h4><i class="icon fa fa-check"></i> Success!</h4>
              {{success}}
            </div>
          {{/if}}
          {{#if error}}
            <div class="alert alert-danger alert-dismissible">
              <h4><i class="icon fa fa-ban"></i> Problem!</h4>
              {{error}}
            </div>
          {{/if}}
          {{#if validationError}}
            <div class="alert alert-danger alert-dismissible">
              <h4><i class="icon fa fa-ban"></i> Problem!</h4>
              <ul>
                {{#each validationError}}
                  <li>{{msg}}</li>
                {{/each}}
              </ul>
            </div>
          {{/if}}
          <!-- general form elements -->
          <form role="form" method="post" action="/admincp/reset">
            <div class="box box-primary">
              <div class="box-header with-border">
                <h3 class="box-title">Reset Settings</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
              <div class="box-body">
                <div class="col-md-4 col-md-offset-4">
                  <div class="form-group">
                    <label for="limit">Reset limit:</label>
                    <input type="text" class="form-control" id="limit" name="limit" value="{{reset.limit}}" required>
                  </div>
                  <div class="form-group">
                    <label for="resetLimited">Reset limit active:</label>
                    <input type="checkbox" id="resetLimited" name="resetLimited" value="1" {{#if reset.limited}}checked{{/if}}>
                  </div>
                  <div class="form-group">
                    <label for="stats">Stats per reset:</label>
                    <input type="text" class="form-control" id="stats" name="stats" value="{{reset.statsPerReset}}" required>
                  </div>
                  <div class="form-group">
                    <label for="resetStats">Reset stats:</label>
                    <input type="checkbox" id="resetStats" name="resetStats" value="1" {{#if reset.resetStats}}checked{{/if}}>
                  </div>
                  <div class="form-group">
                    <label for="resetSkills">Reset skills:</label>
                    <input type="checkbox" id="resetSkills" name="resetSkills" value="1" {{#if reset.resetSkills}}checked{{/if}}>
                  </div>
                  <div class="form-group">
                    <label for="resetInventory">Reset inventory:</label>
                    <input type="checkbox" id="resetInventory" name="resetInventory" value="1" {{#if reset.resetInventory}}checked{{/if}}>
                  </div>
                  <div class="form-group">
                    <label for="costxreset">Cost * reset:</label>
                    <input type="text" class="form-control" id="costxreset" name="costxreset" value="{{reset.costxreset}}" required>
                  </div>
                </div>
              </div>
            {{#each reset.accountLevel}}
              <div class="box box-primary">
                <div class="box-header with-border">
                  <h3 class="box-title">Requirements AccountLevel {{@index}}:</h3>
                </div>
                <!-- /.box-header -->
              <div class="box-body">
                <div class="col-md-4 col-md-offset-4">
                  <div class="form-group">
                      <label for="levelrequired{{@index}}">Level Required:</label>
                      <input type="text" class="form-control" id="levelrequired{{@index}}" name="levelrequired{{@index}}" value="{{level}}" required>
                  </div>
                  <div class="form-group">
                      <label for="zenrequired{{@index}}">Zen Required:</label>
                      <input type="text" class="form-control" id="zenrequired{{@index}}" name="zenrequired{{@index}}" value="{{zen}}" required>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
          </form>
        </div>
      </div>
      <!-- /.box-body -->
      <!-- /.box-body -->        
    </section>
    <!-- /.content -->