    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Webshop Settings
      </h1>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <!-- left column -->
        <div class="col-md-12">
          {{#if success}}
            <div class="alert alert-success alert-dismissible">
              <h4><i class="icon fa fa-check"></i> Success!</h4>
              {{success}}
            </div>
          {{/if}}
          {{#if error}}
            <div class="alert alert-danger alert-dismissible">
              <h4><i class="icon fa fa-ban"></i> Problem!</h4>
              {{error}}
            </div>
          {{/if}}
          {{#if validationError}}
            <div class="alert alert-danger alert-dismissible">
              <h4><i class="icon fa fa-ban"></i> Problem!</h4>
              <ul>
                {{#each validationError}}
                  <li>{{msg}}</li>
                {{/each}}
              </ul>
            </div>
          {{/if}}
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Costs</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" method="post" action="/admincp/webshop/settings">
              <div class="box-body">
                <div class="col-md-4 col-md-offset-4">
                  <div class="form-group">
                    <label for="coinsPerItemLevel">Cost per item level:</label>
                    <input type="text" class="form-control" id="coinsPerItemLevel" name="coinsPerItemLevel" value="{{config.coinsPerItemLevel}}" required>
                  </div>
                  <div class="form-group">
                    <label for="coinsPerOptionLevel">Cost per item option level:</label>
                    <input type="text" class="form-control" id="coinsPerOptionLevel" name="coinsPerOptionLevel" value="{{config.coinsPerOptionLevel}}" required>
                  </div>
                  <div class="form-group">
                    <label for="coinsForLuck">Cost for luck:</label>
                    <input type="text" class="form-control" id="coinsForLuck" name="coinsForLuck" value="{{config.coinsForLuck}}" required>
                  </div>
                  <div class="form-group">
                    <label for="coinsForSkill">Cost for skill:</label>
                    <input type="text" class="form-control" id="coinsForSkill" name="coinsForSkill" value="{{config.coinsForSkill}}" required>
                  </div>
                  <div class="form-group">
                    <label for="coinsForExcellentOption1">Cost for excellent option 1:</label>
                    <input type="text" class="form-control" id="coinsForExcellentOption1" name="coinsForExcellentOption1" value="{{config.coinsForExcellentOption1}}" required>
                  </div>
                  <div class="form-group">
                    <label for="coinsForExcellentOption2">Cost for excellent option 2:</label>
                    <input type="text" class="form-control" id="coinsForExcellentOption2" name="coinsForExcellentOption2" value="{{config.coinsForExcellentOption2}}" required>
                  </div>
                  <div class="form-group">
                    <label for="coinsForExcellentOption3">Cost for excellent option 3:</label>
                    <input type="text" class="form-control" id="coinsForExcellentOption3" name="coinsForExcellentOption3" value="{{config.coinsForExcellentOption3}}" required>
                  </div>
                  <div class="form-group">
                    <label for="coinsForExcellentOption4">Cost for excellent option 4:</label>
                    <input type="text" class="form-control" id="coinsForExcellentOption4" name="coinsForExcellentOption4" value="{{config.coinsForExcellentOption4}}" required>
                  </div>
                  <div class="form-group">
                    <label for="coinsForExcellentOption5">Cost for excellent option 5:</label>
                    <input type="text" class="form-control" id="coinsForExcellentOption5" name="coinsForExcellentOption5" value="{{config.coinsForExcellentOption5}}" required>
                  </div>
                  <div class="form-group">
                    <label for="coinsForExcellentOption6">Cost for excellent option 6:</label>
                    <input type="text" class="form-control" id="coinsForExcellentOption6" name="coinsForExcellentOption6" value="{{config.coinsForExcellentOption6}}" required>
                  </div>
                </div>
              </div>
              <!-- /.box-body -->
              <input type="hidden" name="_csrf" value="{{csrfToken}}">
              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>

            </form>
          </div>
        </div>
      </div>
              <!-- /.box-body -->
    </section>
    <!-- /.content -->