    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        VIP Settings
      </h1>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <!-- left column -->
        <div class="col-md-12">
          {{#if success}}
          <div class="alert alert-success alert-dismissible">
            <h4><i class="icon fa fa-check"></i> Success!</h4>
            {{success}}
          </div>
          {{/if}}
          {{#if error}}
          <div class="alert alert-danger alert-dismissible">
            <h4><i class="icon fa fa-ban"></i> Problem!</h4>
            {{error}}
          </div>
          {{/if}}
          {{#if validationError}}
          <div class="alert alert-danger alert-dismissible">
            <h4><i class="icon fa fa-ban"></i> Problem!</h4>
            <ul>
              {{#each validationError}}
              <li>{{msg}}</li>
              {{/each}}
            </ul>
          </div>
          {{/if}}
          <!-- general form elements -->
          <form role="form" method="post" action="/admincp/vip">
            <div class="box box-primary">
              <div class="box-header with-border">
                <h3 class="box-title">VIP Settings</h3>
              </div>
              <div class="box-body">
                <div class="col-md-4 col-md-offset-4">
                  <div class="form-group">
                    <label for="levelsActive">Levels Active:</label>
                    <select name="levelsActive" id="levelsActive">
                      <option value="1" {{#if required1}}selected="selected"{{/if}}>1</option>
                      <option value="2" {{#if required2}}selected="selected"{{/if}}>2</option>
                      <option value="3" {{#if required3}}selected="selected"{{/if}}>3</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="box box-primary">
                <div class="box-header with-border">
                  <h3 class="box-title">Trial Settings</h3>
                </div>

                <!-- /.box-header -->
                <!-- form start -->
                <div class="box-body">
                  <div class="col-md-4 col-md-offset-4">
                    <div class="form-group">
                    <label for="env_dev">Trial enabled:</label>
                      <input type="checkbox" id="trial_active" name="trial_active" value="1" {{#if vip.trial.active}}checked{{/if}}>
                    </div>
                    <div class="form-group">
                      <label for="trialAccountLevel">Trial AccountLevel:</label>
                      <input type="text" class="form-control" id="trialAccountLevel" name="trialAccountLevel" value="{{vip.trial.accountLevel}}" required>
                    </div>
                    <div class="form-group">
                      <label for="trialDays">Trial Days:</label>
                      <input type="text" class="form-control" id="trialDays" name="trialDays" value="{{vip.trial.days}}" required>
                    </div>
                  </div>
                </div>
                {{#each vip.accountLevel}}
                <div class="box box-primary">
                  <div class="box-header with-border">
                    <h3 class="box-title">VIP {{name}} Settings:</h3>
                  </div>
                  <!-- /.box-header -->
                  <div class="box-body">
                    <div class="col-md-4 col-md-offset-4">
                      <div class="form-group">
                        <label for="namevip{{incremented @index}}">Name:</label>
                        <input type="text" class="form-control" id="namevip{{incremented @index}}" name="namevip{{incremented @index}}" value="{{name}}" required>
                      </div>
                      {{#each paquetes}}
                      <div class="box-header with-border">
                        <h3 class="box-title">Package {{@index}}:</h3>
                      </div>
                      <div class="form-group">
                        <label for="daysvip{{incremented @../index}}package{{@index}}">Days:</label>
                        <input type="text" class="form-control" id="daysvip{{incremented @../index}}package{{@index}}" name="daysvip{{incremented @../index}}package{{@index}}" value="{{dias}}" required>
                      </div>
                      <div class="form-group">
                        <label for="coinsvip{{incremented @../index}}package{{@index}}">Costs:</label>
                        <input type="text" class="form-control" id="coinsvip{{incremented @../index}}package{{@index}}" name="coinsvip{{incremented @../index}}package{{@index}}" value="{{coins}}" required>
                      </div>
                      {{/each}}
                    </div>
                  </div>
                </div>
                {{/each}}
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <div class="box-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>
          </div>
          <!-- /.box-body -->
          <!-- /.box-body -->        
        </section>
    <!-- /.content -->