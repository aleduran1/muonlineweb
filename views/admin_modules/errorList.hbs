<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
        LOGS: Error
      </h1>
</section>
<!-- Main content -->
<section class="content">
  <div class="row">
    <!-- left column -->
    <div class="col-md-12">
      <!-- general form elements -->
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Error LOG List</h3>
        </div>
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tbody>
              <tr>
                <th>Date</th>
                <th>Function Name</th>
                <th>Error</th>
              </tr>
              {{#each eLOG}}
                <tr>
                  <td>{{timestamp}}</td>
                  <td>{{controllerName}}</td>
                  <td>
                    <div id="error{{@index}}" style="display: none">
                      <p>Message: {{message}}</p>
                    </div>
                  </td>
                  <td>
                    <button type="button" onclick="$('#error{{@index}}').toggle();" class="btn btn-danger raised">Show</button>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
      </div>
    </div>
    <!-- /.box-body -->
</section>
<!-- /.content -->
